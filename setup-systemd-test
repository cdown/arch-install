#!/bin/bash -e

# curl -Lo systemd-setup https://bit.ly/2AB3pyT

commit=${1?need commit}

set -x

cat > /etc/sudoers << 'EOF'
root  ALL=(ALL) ALL
%sudo ALL=(ALL) ALL
makepkg ALL=NOPASSWD: /usr/bin/pacman *
EOF

if ! getent passwd makepkg >/dev/null 2>&1; then
    useradd -m makepkg
    passwd makepkg
fi

pacman -S --assume-installed systemd --noconfirm --needed base base-devel git perf strace gdb htop time bcc bpf

if [[ -d /home/makepkg/systemd-git ]]; then
    (cd ~makepkg/systemd-git && sudo -u makepkg git fetch -p && sudo -u makepkg git reset --hard origin/master)
else
    (cd ~makepkg && sudo -u makepkg git clone http://aur.archlinux.org/systemd-git.git)
fi

sudo -iu makepkg rm -f ~makepkg/systemd-git/*.pkg.tar
sudo -iu makepkg sh -c "cd ~/systemd-git && sed -i 's|git+https://github.com/systemd/systemd|git+https://github.com/cdown/systemd#commit=$commit|' PKGBUILD && makepkg -s --nocheck"
pacman -U ~makepkg/systemd-git/{systemd-libs-git,systemd-git,systemd-sysvcompat-git}-*.pkg.tar

systemctl daemon-reexec
